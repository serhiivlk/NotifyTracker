<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotiHub"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teel_200</item>
        <item name="colorSecondaryVariant">@color/teel_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">#FDB834</item>

        <item name="popupMenuStyle">@style/PopupMenuTheme</item>

        <item name="android:windowBackground">@color/window_background</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.NotiHub.AppBarOverlay"
        parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="Theme.NotiHub.PopupOverlay"
        parent="ThemeOverlay.MaterialComponents.Light">
    </style>

    <style name="Theme.NotiHub.Alert"
        parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">#FDB834</item>
        <item name="colorControlNormal">#FDB834</item>
    </style>

    <style name="PopupMenuTheme"
        parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:popupBackground">@drawable/bg_popup</item>
        <item name="android:dropDownHorizontalOffset">-36dp</item>
        <item name="android:dropDownVerticalOffset">-20dp</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.Pill">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.Cut">
        <item name="cornerSize">25%</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.Cut.Medium">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">cut</item>
    </style>

</resources>
